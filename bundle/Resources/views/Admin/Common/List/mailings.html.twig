{% set statusKeys = constant('Novactive\\Bundle\\eZMailingBundle\\Entity\\Mailing::STATUSES') %}
<table class="table table-striped table-hover table-sm">
    <tr>
        <th>Name</th>
        <th>Status</th>
        <th class="text-center">Updated</th>
        <th class="text-center">Created</th>
    </tr>
    {% for item in items %}
        <tr>
            <td>
                <a href="{{ path('novaezmailing_mailing_show', {mailing:item.id}) }}">{{ item.name }}</a>
            </td>
            <td>
                <img src="{{ asset("/bundles/novaezmailing/admin/images/16x16/"~statusKeys[item.status])~".png" }}" class="nova-icon"/> {{ statusKeys[item.status] }}
            </td>
            <td class="text-center">{{ item.created|localizeddate(novaezmailing.dateformat.date, novaezmailing.dateformat.date) }}</td>
            <td class="text-center">{{ item.updated|localizeddate(novaezmailing.dateformat.date, novaezmailing.dateformat.date) }}</td>
        </tr>

    {% endfor %}
</table>
