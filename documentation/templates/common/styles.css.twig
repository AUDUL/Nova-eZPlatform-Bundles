* {
    font-family: 'Open Sans', sans-serif;
}

a, a:hover, footer .fa {
    color: #E99749;
}

a.icon {
    text-decoration: none;
}

pre {
    padding: 5px;
    border: 2px solid #E99749;
    background: #F8F9FA;
}

pre code {
    font-family: 'Courier', sans-serif;
    font-size: 0.9em;
}


.nav-link {
    padding: 0;
    margin: 0;
}

.sidebar p {
    padding: 0;
    margin: 0;
}

img.img-fluid {
    max-width: 500px;
}
