<phpunit colors="false" stopOnFailure="false" backupGlobals="false">
    <php>
        <ini name="error_reporting" value="-1"/>
    </php>
    <testsuites>
        <testsuite name="NovaeZMailingBundle">
            <directory>./Tests/</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory>./</directory>
            <exclude>
                <directory>./Tests</directory>
            </exclude>
        </whitelist>
    </filter>
    <php>
        <env name="UNIT_TESTS" value="true"/>
    </php>
</phpunit>
